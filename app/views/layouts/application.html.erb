<!DOCTYPE html>
<html>
<head>
  <title>SNU QnA Forum</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => false %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => false %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
  <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
  <link rel="stylesheet" type="text/css" href="//cdn.sstatic.net/stackoverflow/all.css?v=8d8f95b96b84">

</head>
<body>

<%= render :partial => "layouts/header" %>

<%= yield %>

<!-- Vote up and vote down -->
<script>
  function vote_up(post_id) {
    $.ajax({
      url: "/qna/vote_up_complete.json",
      type: "POST",
      data: {
        id: post_id
      },
      success: function(data) {
        $('#question .vote-up-off').attr('onclick',"already_voted();");
        $('#question .vote-up-off').addClass("vote-up-on");
        $('#question .vote-count-post').html(data);
        // alert("(임시) Voted up successfully.");
      },
      error: function() {
        // alert("Already voted");
      }
    });
  }
  
  function already_voted() {
    alert("Already voted");
  }

  function vote_down(post_id) {
    $.ajax({
      url: "/qna/vote_down_complete.json",
      type: "POST",
      data: {
        id: post_id
      },
      success: function(data) {
        $('#question .vote-up-off').attr('onclick',"already_voted();");
        $('#question .vote-up-off').addClass("vote-up-on");
        $('#question .vote-count-post').html(data);
        // alert("(임시) Voted up successfully.");
      },
      error: function() {
        // alert("Already voted");
      }
    });
  }
  
  function already_voted() {
    alert("Already voted");
  }
</script>


</body>
</html>
